<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ONG_ANIMALES_V4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ONG_ANIMALES_V4.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <!-- Logo que redirige al inicio -->
                <a class="navbar-brand" asp-page="/Index">
                    <img src="/images/animeales en extincion.webp" alt="Logo ONG" width="50" height="50">
                </a>

                <!-- Botón para móviles -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Opciones del Navbar -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Opcion1">Quienes somos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Opcion2">Videos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Opcion3">Mas animales</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Opcion4">Noticias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Opcion5">Registrate</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ONG_ANIMALES_V4 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <footer class=bg-dark text-white text-center text-lg-start mt-5">
        <div class="container p-4">
            <div class="row">
                <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                    <h5>Derechos Reservados</h5>
                    <p>© 2023 ONG de Animales. Todos los derechos reservados.</p>
                </div>
                <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                    <h5>Redes Sociales</h5>
                    <a href="https://facebook.com" class="me-3">Facebook</a>
                    <a href="https://twitter.com" class="me-3">Twitter</a>
                    <a href="https://youtube.com" class="me-3">YouTube</a>
                    <a href="https://instagram.com">Instagram</a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>